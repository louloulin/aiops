{
  "name": "aiops-api",
  "version": "1.0.0",
  "description": "API service for AI OPS platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_OPTIONS=\"--no-warnings\" tsx watch src/index.ts",
    "build": "tsc",
    "start": "NODE_OPTIONS=\"--no-warnings\" node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:metrics": "tsx src/tests/metrics.test.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check:pg"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.2.7",
    "@hono/node-server": "^1.14.0",
    "@hono/zod-validator": "0.4.3",
    "@mastra/core": "^0.6.3",
    "@mastra/memory": "^0.2.4",
    "@mastra/pg": "^0.2.4",
    "@mastra/rag": "^0.1.12",
    "@mastra/vector-libsql": "^1.0.0",
    "@types/pg": "^8.11.11",
    "@types/supertest": "6.0.3",
    "cron": "^3.1.6",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.7.5",
    "nodemailer": "^6.9.12",
    "openai": "^4.89.0",
    "pg": "^8.14.1",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "qwen-ai-provider": "0.1.0",
    "redis": "^4.7.0",
    "supertest": "7.1.0",
    "vitest": "3.1.1",
    "zod": "^3.24.2",
    "fastembed": "^1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.11",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "bun-types": "^1.2.5",
    "drizzle-kit": "^0.30.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "node-fetch": "3.3.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.2",
    "uuid": "11.1.0"
  },
