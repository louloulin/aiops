  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "node"],
    "ignoreDeprecations": "5.0",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "moduleResolution": "node"
  },
  "references": [
